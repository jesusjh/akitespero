body
	background #CCCCCC
	font-size 13px
	margin  0px
	text-align  center
	z-index 0px

header
	background  white
	display  inline-block
	margin 0.1em
	vertical-align top
	width 99%

header #logo
	display inline-block
	float left
	margin 0.3em
	width 50%

header #logo #logo-item
	display inline-block
	border-radius 20px
	padding 0.3em 0.4em
	width 94%
	
nav
	background #D8D8D8
	border-bottom 4px solid transparent
	border-left 20px solid white
	border-top 8px solid transparent
	border-bottom 20px solid white
	border-right 10px solid white
	border-top 4px solid transparent
	color white
	display inline-block
	font-size 1.7em
	text-align left
	vertical-align top
	width 97%

nav ul
	list-style none
	margin 0px
	padding 0 0.8em

nav ul li 
	display inline-block
	margin 0 1.2em 0 0
	vertical-align top

nav ul li a 
	color white
	font-weight normal
	display block
	padding 0 0

nav ul li a:hover
	border-bottom 6px solid #414141
	margin 0px
	padding 0px

header #nota
	display inline-block
	float right
	margin 0.3em
	padding 0.4em 2em 
	top 0px
	vertical-align top
	width 30%

header #nota #nota-item
	display inline-block
	float right
	width 50%

header #nota #nota-item h3
	font-family "Sancreek", Arial
	font-size 1.1em
	font-weight normal
	text-align left
	width 100%

header #nota #avatar
	display inline-block
	float left
	width 50%

header #nota #avatar h3
	font-family "Sancreek", Arial
	font-size 1.1em
	font-weight normal
	text-align left
	width 100%

header #nota #avatar a
	color black
	font-size 1.0em

header #nota #avatar a:hover
	color #008FD5
	font-family "Libre Baskerville", Arial
	font-size 1.2em

#contenedor
	background white
	display inline-block
	width 99%

#contenedor #texto-item
	float right 
	margin 0.5em
	margin-top 5em
	position relative
	width 40%

#contenedor #texto-item h4
	font-family "Sancreek", Arial
	font-size 1.1em
	font-weight bold 

#contenedor #texto-item small
	font-size 1.3em
	font-weight bold

#contenedor #texto-item a 
	color #7DB1B7
	font-size 1.0em

#contenedor #texto-item a:hover
	font-size 1.3em

#contenedor #texto-item .logo
	margin 0.5em
	width 20px

#contenedor #texto-item #item 
	display inline-block
	float left
	margin 2em 4em
	position relative
	text-align left
	width 80%

#contenedor #texto-item #item h4
	font-family "Sancreek", Arial
	font-size 1.2em
	font-weight bold
	text-align center
	width 100%

#contenedor #texto-item #item small
	color #008FD5

#contenedor #carta
	display inline-block
	float left
	margin 0.4em
	position relative
	width 50%

#contenedor #nota 
	display none 

#contenedor #carta .archivos
	padding 0.4em
	vertical-align top
	width 35%

#contenedor #carta #ruta a
	color black
	font-family "Libre Baskerville", Arial
	font-size 1.1em
	font-weight bold

#contenedor #carta #ruta a:hover
	font-size 1.5em

#contenedor #pie
	background black
	display inline-block
	width 100%

#contenedor #pie #presentacion
	background black
	color white
	display inline-block
	font-size 1.2em
	margin 0.8em
	width 80%

#contenedor #pie  #enlaces
	float left
	width 30%

#contenedor #pie  #enlaces .redes
	border-radius 30px
	float left
	margin 0 0.4em 
	padding 0.4em
	position relative
	width 10%

#pie #enlace
	display inline-block
	float left
	width 30%

#pie #enlace .red
	float left
	padding 0.3em
	width 50%

#contenedor #pie #donde
	background red
	display inline-block
	float right
	margin 0.3em
	position relative
	width 30%

#contenedor #pie #donde .vamos
	width 40%

@import "responsive.styl"