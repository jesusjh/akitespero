body
	background #CCCCCC
	font-size 13px
	margin  0px
	text-align  center
	z-index 0px

header
	background  white
	display  inline-block
	margin 0.1em
	vertical-align top
	width 99%

header #logo
	display inline-block
	float left
	margin 0.3em
	width 50%

header #logo #logo-item
	display inline-block
	border-radius 20px
	padding 0.3em 0.4em
	width 94%
	
nav
	background #D8D8D8
	border-bottom 4px solid transparent
	border-left 20px solid white
	border-top 8px solid transparent
	border-bottom 20px solid white
	border-right 10px solid white
	border-top 4px solid transparent
	color white
	display inline-block
	font-size 1.7em
	text-align left
	vertical-align top
	width 97%

nav ul
	list-style none
	margin 0px
	padding 0 0.8em

nav ul li 
	display inline-block
	margin 0 1.2em 0 0
	vertical-align top

nav ul li a 
	color white
	font-weight normal
	display block
	padding 0 0

nav ul li a:hover
	border-bottom 6px solid #414141
	margin 0px
	padding 0px

nav ul #boton a
	color #B73A48

nav ul #boton a:hover
	background #008FD5
	border 2px solid black
	box-shadow 2px 3px 15px #3D4853
	font-family "Libre Baskerville", Arial
	font-size 1.0em
	font-weight bold

header #nota
	display inline-block
	float right
	margin 0.3em
	padding 0.4em 2em 
	top 0px
	vertical-align top
	width 30%

header #nota #nota-item
	display inline-block
	float right
	width 50%

header #nota #nota-item h3
	font-family "Sancreek", Arial
	font-size 1.1em
	font-weight normal
	text-align left
	width 100%

header #nota #avatar
	display inline-block
	float left
	width 50%

header #nota #avatar h3
	font-family "Sancreek", Arial
	font-size 1.1em
	font-weight normal
	text-align left
	width 100%

header #nota #avatar a
	color black
	font-size 1.0em

header #nota #avatar a:hover
	color #008FD5
	font-family "Libre Baskerville", Arial
	font-size 1.2em

#contenedor
	background white
	display inline-block
	width 99%

#contenedor #imagenes
	background red
	display inline-block
	float left
	margin 0.3em
	padding 0.4em
	width 55%

