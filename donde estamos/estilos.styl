body
	background #CCCCCC
	font-size 14px
	margin  0px
	text-align  center

header
	background  white
	display  inline-block
	font-size 10px
	margin 0.1em
	vertical-align top
	width 99%


header #logo
	display inline-block
	float left
	padding-left 0.2em
	position relative
	width 85%


header #logo img
	border-top-right-radius 10px
	border-top-left-radius 10px
	border-bottom-right-radius 10px
	border-bottom-left-radius 10px
	display inline-block
	float left
	margin 0.3em 0px
	width 75%

header #logo #titulo-item
	display block
	margin 0.4em 
	padding 0.1em 
	text-align left
	vertical-align top
	width 20%

header #logo #titulo-item h3
	margin 1em
	font-family "Sancreek", Arial
	text-align center
	width 96%

header #avatar
	display inline-block
	float right
	margin-top -17em
	position relative
	text-align left
	width 30%

header #avatar #titulo
	font-family "Sancreek", Arial
	font-size 1.7em
	float right
	margin 0.2em
	margin-top 0.1em
	position relative
	text-align center
	width 100%
	

nav
	background #684124
	border-bottom 4px solid transparent
	border-left 10px solid white
	border-top 4px solid transparent
	border-bottom 4px solid transparent
	border-right 10px solid white
	border-top 4px solid transparent
	color white
	display inline-block
	font-size 1.4em
	text-align left
	vertical-align top
	width 97%

nav ul
	list-style none
	margin 0px
	padding 0 0.8em

nav ul li 
	display inline-block
	margin 0 1.2em 0 0
	vertical-align top

nav ul li a 
	color white
	font-weight normal
	display block
	padding 0 0

nav ul li a:hover
	border-bottom 3px solid #0058A5
	margin 0px
	padding 0px

#contenedor
	background white
	display inline-block
	top 0px
	width 99%

#contenedor #imagen
	box-shadow 0 9px 10px black
	display inline-block
	height auto
	margin 0
	top 0
	vertical-align top
	width 100%

#contenedor #imagen .image
	border-radius 40%
	display inline-block
	height 150px
	margin 0
	position relative
	top 0
	vertical-align top
	width 99%

#contenedor #mapa
	display inline-block
	float left
	margin 0.7em 0.4em 
	position relative
	width  50%

#contenedor #mapa  .mapa
	display inline-block
	width 90%

#contenedor #mapa  #texto
	font-size 1.0em
	font-weight normal
	margin 0.3em
	text-align left
	width 60%

#contenedor  #pie 
	background #321600
	border-bottom 4px solid transparent
	border-left 15px solid transparent
	border-top 4px solid white
	border-bottom 4px solid white
	border-right 15px solid transparent
	border-top 4px solid white
	color white
	display inline-block
	width 90%